<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.remindmehere"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_white"
        android:theme="@style/MyTheme" >
        <activity
            android:name="com.example.remindmehere.MainActivity"
            android:label="@string/empty" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.remindmehere.HandleReminders"
            android:label="@string/empty" >
        </activity>
        <activity
            android:name="com.example.remindmehere.NotifyMessage"
            android:label="@string/empty" >
        </activity>
    </application>

</manifest>
